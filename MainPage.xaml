<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiPhotoCaptureDemo"
             x:Class="MauiPhotoCaptureDemo.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
         <Button Text="Take Photo" Command="{Binding TakePhotoCommand}" />
        <Button Text="Pick Photo" Command="{Binding PickPhotoCommand}" />
        <Image Source="{Binding PhotoImageSource}" WidthRequest="200" HeightRequest="200" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

